/* 付箋リンクのスタイル */
.fusen-link-container {
    margin-top: 15px;
    padding: 10px;
    background-color: #fff9c4;
    border: 1px dashed #ffcc80;
    border-radius: 8px;
    text-align: center;
}

.fusen-link {
    display: inline-block;
    background-color: #e67e22;
    color: white;
    padding: 8px 20px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: bold;
    margin-bottom: 5px;
    transition: background-color 0.3s;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.fusen-link:hover {
    background-color: #d35400;
}

.fusen-link i {
    margin-right: 5px;
}

.fusen-note {
    margin: 5px 0 0;
    font-size: 0.8rem;
    color: #e74c3c;
}

/* 選択画面 */
.choice-screen {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 50px 25px; /* 余白を調整 */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fdfbf6; /* 背景色を少し明るく、上品な色合いに */
    z-index: 100;
    flex: 1;
}

.choice-screen::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('../images/leaves-bg.png');
    background-size: 250px; /* 背景模様を少し小さく */
    background-repeat: repeat;
    opacity: 0.04; /* 背景模様をさらに薄く */
    z-index: -1;
}

/* 選択画面用の装飾エフェクト */
.choice-decoration-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
}

/* カード内のコンテンツスタイル調整 */
.choice-card-content h3 {
    font-family: 'Noto Serif JP', sans-serif;
    margin: 0 0 8px 0;
    font-size: 1.3rem; /* 1.4remから1.3remに調整 */
    color: #5d4037; /* 色を統一 */
    font-weight: 500;
    letter-spacing: 0.5px;
}

.choice-card-content p {
    margin: 0;
    color: #7d6e63; /* グレーからより暖かい色調に */
    font-size: 0.95rem; /* フォントサイズを微調整 */
    font-family: 'Noto Sans JP', sans-serif;
    font-weight: 300;
}

/* スマホ用のさらなる調整 */
@media (max-width: 480px) {
    .choice-screen {
        padding: 40px 20px;
    }
    
    .choice-header h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }
    
    .choice-header p {
        font-size: 0.9rem;
    }
    
    .choice-card-content h3 {
        font-size: 1.1rem;
    }
    
    .choice-card-content p {
        font-size: 0.85rem;
    }
}

/* 固定ヘッダーの最適化 - モバイル向け */
@media (max-width: 767px) {
    .main-header {
        position: fixed; /* 元の設定に戻す */
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: rgba(255, 255, 255, 0.95);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }
    
    /* 画像の読み込みと表示を最適化 */
    img {
        opacity: 1 !important; /* 透明度アニメーションを無効化 */
        transform: none !important; /* 変形アニメーションを無効化 */
        transition: none !important; /* すべてのトランジションを無効化 */
    }
    
    /* パララックス効果の無効化 */
    .parallax-bg {
        background-attachment: scroll !important;
        transform: none !important;
    }
}

/* モバイルでのスクロール中は追加最適化を削除 */

@media (max-width: 768px) {
    /* 前の内容 */
    
    .timeline-section {
        padding: 30px 20px;
    }
    
    .timeline::before {
        left: 10px;
    }
    
    .timeline-item {
        padding-left: 35px;
    }
    
    .timeline-date {
        margin-bottom: 12px;
        border-bottom: 1px dashed var(--accent-light);
        padding-bottom: 8px;
    }
    
    .timeline-date span {
        display: block;
        white-space: normal;
        font-size: 1.05rem;
    }
    
    .timeline-dot {
        left: 2px;
        top: 6px;
        width: 14px;
        height: 14px;
    }
    
    .timeline-content p {
        text-align: left;
    }
}

/* セクションのスクロール位置調整 - 固定ヘッダー分のオフセット */
section, .section {
    scroll-margin-top: 80px; /* ヘッダーの高さ分のスクロールマージン */
}

/* story-sectionのパディング調整を元に戻す */
.story-section {
    background-color: rgba(255, 255, 255, 0.95);
    padding: 50px;
    border-radius: 15px;
    margin-bottom: 70px;
    position: relative;
    overflow: hidden;
    scroll-margin-top: 80px; /* ヘッダーの高さ分のスクロールマージン */
}

/* モバイル向け全体調整 */
@media (max-width: 767px) {
    /* ヘッダー固定に対応する調整 */
    .invitation-content {
        padding-top: 70px; /* ヘッダーの高さ+余白 */
    }
    
    html {
        scroll-padding-top: 70px;
    }
    
    section, .section, .timeline-section, .story-section, 
    .countdown-section, .gallery, .rsvp-section, 
    .message-section, .schedule-section, .faq-section {
        scroll-margin-top: 70px;
        padding: 30px 15px; /* パディングを調整 */
        margin-bottom: 40px; /* セクション間の余白を調整 */
    }
    
    /* 各セクションの余白と表示を調整 */
    .section-title {
        margin-bottom: 20px;
    }
    
    /* ヘッダー設定 */
    .main-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        padding: 10px 15px;
        height: auto;
        min-height: 60px;
        box-sizing: border-box;
        background-color: rgba(255, 255, 255, 0.95);
    }
}

/* スマホ向け特別調整 */
@media (max-width: 480px) {
    /* ヘッダーとコンテンツの関係をさらに調整 */
    .invitation-content {
        padding-top: 60px; /* ヘッダーの高さ+余白 */
    }
    
    html {
        scroll-padding-top: 60px;
    }
    
    section, .section, .timeline-section, .story-section, 
    .countdown-section, .gallery, .rsvp-section, 
    .message-section, .schedule-section, .faq-section {
        scroll-margin-top: 60px;
        padding: 25px 10px; /* パディングをさらに調整 */
        margin-bottom: 30px; /* セクション間の余白をさらに調整 */
        border-radius: 10px; /* 角丸を調整 */
    }
    
    /* モバイルでの余白調整 */
    .container {
        width: 95%;
        margin: 0 auto;
        padding: 0;
    }
    
    /* ヘッダーをより小さく調整 */
    .main-header {
        min-height: 50px;
        padding: 8px 10px;
        height: 60px;
    }
    
    .main-header .title {
        font-size: 20px;
    }
    
    .main-header .subtitle {
        font-size: 12px;
        margin-top: 0;
    }
    
    /* フォントサイズ調整 */
