/* スケジュールセクションのスタイル */
.schedule-section {
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 30px;
    margin: 40px auto;
    max-width: 900px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    padding-left: 10px;
    padding-right: 10px;
    overflow-x: hidden;
}

.schedule-intro {
    text-align: center;
    margin-bottom: 30px;
    font-size: 1.1rem;
    color: #666;
}

.schedule-container {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
}

.schedule-container::before {
    content: '';
    position: absolute;
    width: 3px;
    background: linear-gradient(to bottom, #b8c1a2, #8BC34A);
    top: 0;
    bottom: 0;
    left: 18px;
    margin-left: -1px;
    border-radius: 3px;
}

.schedule-item {
    position: relative;
    margin-bottom: 30px;
    padding-left: 45px;
}

.schedule-time {
    position: absolute;
    left: 0;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #b8c1a2, #8BC34A);
    border-radius: 50%;
    text-align: center;
    line-height: 40px;
    color: white;
    font-weight: bold;
    font-size: 0.9rem;
    z-index: 1;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);
}

.schedule-content {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 12px;
    border-left: 3px solid #b8c1a2;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.schedule-content:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.schedule-content h3 {
    margin-top: 0;
    color: #566045;
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.schedule-content p {
    margin-bottom: 0;
    color: #666;
    line-height: 1.6;
}

.no-schedule {
    text-align: center;
    color: #888;
    font-style: italic;
    padding: 20px;
}

/* FAQセクションのスタイル */
.faq-section {
    padding: 3rem 1rem;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    margin-bottom: 3rem;
}

.faq-intro {
    text-align: center;
    margin-bottom: 30px;
    font-size: 1.1rem;
    color: #666;
}

.faq-container {
    max-width: 800px;
    margin: 0 auto;
}

.faq-item {
    margin-bottom: 15px;
    border-radius: 8px;
    overflow: visible; /* hiddenからvisibleに変更 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    position: relative;
}

.faq-question {
    background-color: #f5f9f0;
    padding: 15px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s;
    z-index: 2;
    position: relative;
}

.faq-toggle {
    transition: transform 0.3s;
    position: relative;
    z-index: 2;
}

.faq-answer {
    background-color: white;
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-out, padding 0.3s;
    position: relative;
    z-index: 1;
}

.faq-question:hover {
    background-color: #ebf1e5;
}

.faq-question h3 {
    margin: 0;
    font-size: 1.1rem;
    color: #566045;
    flex-grow: 1;
}

.faq-question i {
    margin-right: 10px;
    color: #b8c1a2;
}

.faq-item.active .faq-toggle i {
    transform: rotate(180deg);
}

.faq-item.active .faq-answer {
    padding: 15px;
    max-height: 1000px; /* 大きな値を設定して自動的に調整させる */
}

.faq-answer p {
    margin-bottom: 10px;
    line-height: 1.6;
}

.faq-link {
    color: var(--accent-dark);
    text-decoration: none;
    border-bottom: 1px dashed var(--accent-light);
    transition: all 0.3s ease;
    padding-bottom: 1px;
}

.faq-link:hover {
    color: var(--accent-light);
    border-bottom: 1px solid var(--accent-light);
}

.no-faqs {
    padding: 2rem;
    text-align: center;
    color: #888;
}

/* レスポンシブデザインの調整 */
@media (max-width: 768px) {
    .schedule-section,
    .faq-section {
        padding: 20px;
    }
    
    .schedule-container::before {
        left: 15px;
    }
    
    .schedule-item {
        padding-left: 35px;
    }
    
    .schedule-time {
        width: 30px;
        height: 30px;
        line-height: 30px;
        font-size: 0.7rem;
    }
    
    .faq-question h3 {
        font-size: 1rem;
    }
}

/* 備考・お願いセクションのスタイル */
