/* 全体のスタイル */
:root {
    --primary-color: #ffffff;
    --accent-color: #4CAF50;
    --accent-light: #81C784;
    --accent-dark: #388E3C;
    --text-color: #333333;
    --background-light: #f8f9fa;
    --shadow-color: rgba(0, 0, 0, 0.08); /* より軽い影に */
    --shadow-light: rgba(0, 0, 0, 0.04);
    --shadow-medium: rgba(0, 0, 0, 0.12);
    --shadow-strong: rgba(0, 0, 0, 0.16);
    --gold: #d4af37;
    --light-gold: #f1e6c1;
    --cream: #fcf8e8;
    --pink-accent: #f8bbd0;
    --pink-light: #fce4ec;
    --pink-dark: #ec407a;
}

@keyframes fadeIn {
    from { 
        opacity: 0; 
        transform: translateY(10px); 
    }
    to { 
        opacity: 1; 
        transform: translateY(0); 
    }
}

@keyframes float {
    0% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(5deg); }
    100% { transform: translateY(0) rotate(0deg); }
}

@keyframes heartbeat {
    0% { transform: scale(1); }
    25% { transform: scale(1.1); }
    50% { transform: scale(1); }
    75% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

@keyframes shimmer {
    0% { background-position: -100% 0; }
    100% { background-position: 200% 0; }
}

@keyframes unfold {
    0% { transform: rotateX(90deg); transform-origin: top; }
    100% { transform: rotateX(0deg); transform-origin: top; }
}

@keyframes fallingSlow {
    0% { 
        transform: translateY(-10px) translateX(0) rotate(0deg);
        opacity: 0;
    }
    10% {
        opacity: 1;
    }
    100% { 
        transform: translateY(100vh) translateX(20px) rotate(360deg);
        opacity: 0;
    }
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* 初期読み込み時の最適化 */
html {
    scroll-behavior: auto !important; /* 初期読み込み時はスムーススクロールを無効化 */
    -webkit-overflow-scrolling: touch; /* iOS Safari向け改善 */
    scroll-padding-top: 80px; /* ヘッダーの高さ分のスクロールパディング */
}

html.ready {
    scroll-behavior: smooth;
}

/* 重いアニメーションの初期状態を調整 */
body {
    font-family: 'Noto Serif JP', serif;
    margin: 0;
    padding: 0;
    background: url('../images/leaves-bg.png') repeat;
    background-size: 400px;
    background-attachment: fixed;
    color: #2c3e50;
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    overflow-x: hidden; /* 横方向のスクロールを防止 */
    width: 100%;
    max-width: 100%; /* ビューポート幅を超えないように制限 */
    will-change: scroll-position; /* スクロールパフォーマンスを向上 */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    /* 初期表示を最適化 */
    opacity: 0.99;
    transition: opacity 0.3s ease;
}

body.ready {
    opacity: 1;
}

/* 初期表示時に不要なアニメーションを抑制 */
.heart, .sparkle, .petal, .leaf {
    /* animation-play-state: paused; */ /* デフォルトで一時停止 */
    display: none; /* 初期表示では非表示 */
}

/* ページ準備完了後にアニメーションを開始（軽量モードでない場合） */
body.ready:not(.ultra-light-mode) .heart,
body.ready:not(.ultra-light-mode) .sparkle,
body.ready:not(.ultra-light-mode) .petal,
body.ready:not(.ultra-light-mode) .leaf {
    /* animation-play-state: running; */
    display: block; /* 表示 */
}

/* 画像読み込み中の表示を最適化 */
img.lazy-load.loading {
    opacity: 0.3;
    background-color: #f5f5f5;
}

/* 初期ローディング画面のスタイル */
.initial-loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.5s ease, visibility 0.5s ease;
}

.initial-loading.hidden {
    opacity: 0;
    visibility: hidden;
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid #f3f3f3;
    border-top: 3px solid var(--accent-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* モバイル向け超軽量モード - 最初の読み込み時に適用 */
@media (max-width: 767px) {
    /* 初期表示時のアニメーションを減らす */
    .floating-petals, .floating-leaves {
        /* opacity: 0; */
        /* transition: opacity 1s ease; */
        display: none; /* 最初から非表示 */
    }
    
    /* body.ready .floating-petals, */ /* JSから制御するため削除 */
    /* body.ready .floating-leaves { */ /* JSから制御するため削除 */
        /* opacity: 0.5; */
    /* } */
    
    /* フォント読み込み前にシステムフォントを使用 */
    .title, .subtitle, h1, h2, h3 {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    body.fonts-loaded .title,
    body.fonts-loaded .subtitle,
    body.fonts-loaded h1,
    body.fonts-loaded h2,
    body.fonts-loaded h3 {
        font-family: 'Noto Serif JP', serif;
    }
    
    /* 読み込み中の背景を簡素化 */
    body::before {
        opacity: 0.02;
    }
    
    /* アニメーションの簡易化 */
    .heart, .sparkle, .petal, .leaf {
        /* animation-play-state: paused; */ /* JSで制御 */
        display: none !important; /* モバイルでは基本的に非表示 */
    }
    
    /* スクロール中はアニメーション停止 */
    /* .is-scrolling クラスは維持 */
    .is-scrolling .heart,
    .is-scrolling .sparkle,
    .is-scrolling .petal,
    .is-scrolling .leaf {
        /* animation-play-state: paused !important; */ /* JS側で制御 */
        /* transition: none !important; */
    }
}

/* スクロール中の最適化 */
html.is-scrolling {
    scroll-behavior: auto !important;
}

body.is-scrolling {
    /* スクロール中は重い処理を一時停止 */
    background-attachment: scroll !important;
}

body.is-scrolling::before {
    /* スクロール中は背景を無効化 */
    display: none !important;
}

/* スクロールが引っかかる箇所を最適化 */
.photo-item, .forest-header {
    containment: layout style paint;
    content-visibility: auto;
}

/* ページ内の要素を適切に分離して再描画を最小化 */
.section-title, .info-card, .message-card, .countdown-section, .schedule-section, .faq-section {
    contain: layout style; /* paintを除外し、影響を軽減 */
}

/* 超軽量モードの場合の超簡素化デザイン */
.ultra-light-mode {
    /* すべてのアニメーションを無効化 */
    animation: none !important;
    transition: none !important;
}

.ultra-light-mode * {
    animation: none !important;
    transition: none !important;
    transform: none !important;
}

.ultra-light-mode img {
    /* transform: translateZ(0); */ /* 削除 */
}

.ultra-light-mode .floating-petals,
.ultra-light-mode .floating-leaves,
.ultra-light-mode .heart,
.ultra-light-mode .sparkle,
.ultra-light-mode .petal,
.ultra-light-mode .leaf {
    display: none !important;
}

.ultra-light-mode .video-container,
.ultra-light-mode .photos,
.ultra-light-mode .invitation-content {
    box-shadow: none !important;
}

/* 森のヘッダー画像を最適化 */
.forest-header {
    width: 100%;
    position: relative;
    overflow: hidden;
    max-height: 40vh;
}

.forest-header img {
    width: 100%;
    height: auto;
    object-fit: cover;
    max-height: 40vh;
    display: block;
    will-change: transform;
}

/* 画像のレイジーロード設定 */
img.lazy-load {
    opacity: 0;
    transition: opacity 0.3s;
}

img.lazy-load.loaded {
    opacity: 1;
}

/* ページコンテンツの表示を最適化 */
.invitation-content {
    padding: 0;
    margin: 0 auto;
    width: 100%;
    max-width: 1200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 1;
    overflow-x: hidden; /* 横方向のスクロールを防止 */
    box-sizing: border-box;
    transform: translateZ(0); /* ハードウェアアクセラレーションを促進 */
    backface-visibility: hidden;
    padding-top: 80px; /* ヘッダーの高さを考慮して上部パディングを追加 */
}

.invitation-content.visible {
    opacity: 1;
}

/* 即時表示のための優先的な要素 */
.priority-visible {
    opacity: 1 !important;
    display: block !important;
}

/* スケルトンローディング用のスタイル */
.skeleton-loading {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
}

@keyframes loading {
    0% {
        background-position: 200% 0;
    }
    100% {
        background-position: -200% 0;
    }
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('../images/leaves-bg.png');
    background-size: 300px;
    background-repeat: repeat;
    opacity: 0.05;
    z-index: -1;
    will-change: transform; /* GPU高速化 */
    /* transform: translateZ(0); */ /* 削除 */
}

/* Container のレスポンシブ対応 */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 10px 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
    position: relative;
    overflow-x: hidden; /* 横方向のスクロールを防止 */
}

/* スマホ向けのメディアクエリ追加 */
@media (max-width: 480px) {
    .container {
        width: 95%;
        margin: 0 auto;
        padding: 0;
    }
    
    body {
        font-size: 14px;
        background-size: 300px;
    }
    
    .invitation-content {
        padding-top: 60px; /* モバイル向けのヘッダー高さに合わせて調整 */
    }
    
    /* モバイル向けの固定ヘッダー調整 */
    html {
        scroll-padding-top: 60px; /* モバイルのヘッダー高さ */
    }
    
    section, .section {
        scroll-margin-top: 60px; /* モバイルのヘッダー高さ */
    }
    
    /* 以下既存のスタイル */
    .main-header {
        height: 60px;
    }
    
    .main-header .title {
        font-size: 20px;
    }
    
    .main-header .subtitle {
        font-size: 12px;
    }
    
    .date {
        font-size: 16px;
    }
    
    .section-title h2 {
        font-size: 22px;
    }
    
    .personal-message {
        padding: 15px;
        font-size: 14px;
    }
    
    /* ビデオコンテナ関連の定義削除 */
    
    .info-card {
        padding: 15px;
    }
    
    .info-item {
        flex-direction: column;
        text-align: center;
        margin-bottom: 15px;
    }
    
    .info-icon {
        margin-right: 0;
        margin-bottom: 10px;
    }
    
    .countdown-item span:first-child {
        font-size: 30px;
    }
    
    .photos {
        gap: 10px;
    }
    
    /* 写真アイテムのスタイル */
    .photo-item {
        width: calc(50% - 5px);
        margin-bottom: 10px;
    }
    
    .photo-item:nth-child(3n+1) {
        width: calc(50% - 5px);
    }
    
    .photo-item:nth-child(3n+2) {
        width: calc(50% - 5px);
    }
    
    .photo-item img {
        border-radius: 5px;
        transition: transform 0.3s;
        will-change: transform;
    }
    
    .photo-item:hover img {
        transform: scale(1.05);
    }
    
    .main-photo {
        width: 100%;
        margin-bottom: 10px;
    }
    
    .message-card {
        padding: 15px;
    }
    
    .message-text {
        font-size: 14px;
    }
    
    .schedule-item {
        padding: 10px;
    }
    
    .faq-question h3 {
        font-size: 16px;
    }
    
    #rsvp-form {
        padding: 15px;
    }
    
    .form-group {
        margin-bottom: 15px;
    }
    
    .radio-group {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .radio-group label {
        margin-bottom: 10px;
    }
    
    body::before {
        opacity: 0.05;
    }
}

/* タブレット向けのメディアクエリ */
@media (min-width: 481px) and (max-width: 768px) {
    .container {
        padding: 20px;
    }
    
    .main-header .title {
        font-size: 2.2rem;
    }
    
    .photos {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* スマホとタブレット共通の調整 */
@media (max-width: 768px) {
    .info-card {
        display: block;
    }
    
    .rsvp-button-container {
        text-align: center;
        margin-top: 20px;
    }
    
    .guestbook-link-container {
        padding: 15px;
    }
    
    .timeline::before {
        left: 30px;
    }
    
    .timeline-item {
        flex-direction: column;
        margin-left: 30px;
    }
    
    .timeline-date {
        margin-bottom: 10px;
        text-align: left;
    }
    
    .timeline-dot {
        left: 30px;
    }
    
    .timeline-content {
        width: 100%;
    }
}

