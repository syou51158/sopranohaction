    }
    
    .timeline-dot {
        left: 7px;
    }
    
    /* ストーリーセクションの特別調整 */
    .story-section {
        padding-top: 40px;
    }
    
    /* RSVPセクションの調整 */
    .rsvp-section {
        padding-top: 40px;
    }
    
    /* ナビゲーションのスクロール位置調整 */
    #timeline, #story, #rsvp, #gallery, #message, #schedule, #faq {
