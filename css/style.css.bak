/* ソプラノハクション小さな説明 */
.soprano-note-container {
    max-width: 800px;
    margin: 0 auto 50px;
    padding: 10px 20px;
    position: relative;
}

.soprano-note {
    position: relative;
    text-align: center;
    padding: 25px 35px;
    color: #555;
    font-size: 0.95rem;
    background-color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    box-shadow: 
        0 5px 15px var(--shadow-light),
        0 3px 8px var(--shadow-color),
        inset 0 0 0 1px rgba(255, 255, 255, 0.9),
        inset 0 0 0 2px rgba(212, 175, 55, 0.1);
    transition: all 0.4s ease;
}

.soprano-note:hover {
    box-shadow: 
        0 8px 20px var(--shadow-light),
        0 5px 12px var(--shadow-color),
        inset 0 0 0 1px rgba(255, 255, 255, 0.9),
        inset 0 0 0 2px rgba(212, 175, 55, 0.2);
    transform: translateY(-3px);
}

.soprano-note::before, 
.soprano-note::after {
    content: '';
    position: absolute;
    width: 60%;
    height: 1px;
    left: 20%;
}

.soprano-note::before {
    top: 10px;
    background: linear-gradient(to right, transparent, var(--gold), transparent);
    opacity: 0.7;
}

.soprano-note::after {
    bottom: 10px;
    background: linear-gradient(to right, transparent, var(--gold), transparent);
    opacity: 0.7;
}

.note-content {
    position: relative;
    padding: 5px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
}

.note-content::before {
    content: '';
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    border: 1px solid rgba(212, 175, 55, 0.1);
    border-radius: 8px;
    pointer-events: none;
    z-index: 0;
}

.note-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
    position: relative;
    z-index: 1;
}

.sneeze-icon-wrapper {
    display: flex;
    align-items: center;
    gap: 15px;
    position: relative;
    margin-right: 12px;
    background: linear-gradient(to right, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.3));
    padding: 3px 12px;
    border-radius: 20px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.02);
}

.sneeze-icon {
    font-family: 'Reggae One', cursive;
    font-size: 0.55rem;
    color: var(--accent-dark);
    display: inline-block;
    transform: rotate(-5deg);
    margin: 0 5px;
    position: relative;
    z-index: 2;
    text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.8), 
                -1px -1px 0 rgba(255, 255, 255, 0.8);
    letter-spacing: 0.02em;
}

.note-music {
    display: flex;
    align-items: center;
    gap: 5px;
}

.note-music i {
    color: var(--gold);
    opacity: 0.9;
    animation: float 3s ease-in-out infinite;
    filter: drop-shadow(0 2px 3px rgba(0, 0, 0, 0.15));
}

.note-music i:nth-child(1) {
    animation-delay: 0s;
    font-size: 12px;
}

.note-music i:nth-child(2) {
    animation-delay: 0.5s;
    font-size: 16px;
}

.note-music i:nth-child(3) {
    animation-delay: 1s;
    font-size: 14px;
}

.note-text {
    position: relative;
    font-style: italic;
    letter-spacing: 0.04em;
    padding: 8px 15px;
    color: #666;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 25px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.note-text p {
    margin: 0;
    line-height: 1.7;
}

.note-text small {
    font-family: 'Noto Serif JP', serif;
    font-weight: 400;
}

.note-text small strong {
    color: var(--accent-dark);
    font-weight: 600;
    letter-spacing: 0.05em;
}

.note-decoration {
    position: absolute;
    width: 24px;
    height: 24px;
    opacity: 0.5;
    transition: all 0.3s ease;
}

.soprano-note:hover .note-decoration {
    opacity: 0.7;
    transform: translateY(-50%) scale(1.1);
}

.note-decoration.left {
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    background-image: url('../images/leaf.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    transform: translateY(-50%) rotate(30deg);
    filter: hue-rotate(10deg) brightness(1.1);
}

.note-decoration.right {
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    background-image: url('../images/leaf.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    transform: translateY(-50%) rotate(-30deg);
    filter: hue-rotate(-10deg) brightness(1.1);
}

