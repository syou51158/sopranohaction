        font-size: 14px;
        background-size: 300px;
    }
    
    .date {
        font-size: 16px;
    }
    
    .section-title h2 {
        font-size: 20px;
    }
    
    .personal-message {
        padding: 15px;
        font-size: 14px;
    }
    
    p {
        line-height: 1.5;
    }
    
    /* インフォメーションカードの調整 */
    .info-card {
        padding: 15px;
    }
    
    .info-item {
        flex-direction: column;
        text-align: center;
        margin-bottom: 15px;
    }
    
    .info-icon {
        margin-right: 0;
        margin-bottom: 10px;
    }
}

/* 特定のセクション調整 - モバイル向け */
@media (max-width: 767px) {
    /* タイムラインの調整 */
    .timeline-section {
        padding-top: 40px;
        padding-bottom: 40px;
    }
    
